{
	"name": "opsiconfd",
	"dockerComposeFile": "../docker/dev-opsiconfd-compose.yml",
	"service": "opsiconfd-dev",
	"context": "..",
	"workspaceFolder": "/workspace",
	"postCreateCommand": "sudo --preserve-env /bin/sh -c /workspace/scripts/setup.sh && poetry config --local virtualenvs.in-project true",
	"postStartCommand": "/workspace/scripts/setup-hosts.sh; poetry install --no-interaction --no-ansi && sudo service redis-server restart && sudo service mysql restart && sudo service grafana-server restart",
	"remoteEnv": {
		"LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
		"DEV_USER": "${localEnv:USER}"
	},
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash",
		"python.pythonPath": ".venv/bin/python",
		"python.terminal.activateEnvironment": false,
		"python.linting.enabled": true,
		"python.testing.pytestArgs": [
			"-vv",
			"tests"
		],
		"python.testing.unittestEnabled": false,
		"python.testing.nosetestsEnabled": false,
		"python.testing.pytestEnabled": true,
		"python.testing.pytestPath": ".venv/bin/pytest",
		"python.linting.pylintEnabled": true,
		"python.linting.pylintCategorySeverity.refactor": "Information",
		"files.trimTrailingWhitespace": true,
		"python.languageServer": "Pylance"
	},
	"extensions": [
		"ms-azuretools.vscode-docker",
		"ms-python.python",
		"ms-python.vscode-pylance"
	],
	"forwardPorts": [4447, 3000],
	"remoteUser": "${localEnv:USER}"
}