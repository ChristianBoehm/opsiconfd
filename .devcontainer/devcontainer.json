{
	"name": "opsiconfd",
	"dockerComposeFile": "../docker/dev-opsiconfd-compose.yml",
	"service": "opsiconfd-dev",
	"context": "..",
	"workspaceFolder": "/workspace",
	"postCreateCommand": "sudo --preserve-env /bin/sh -c /workspace/scripts/setup.sh && poetry config --local virtualenvs.in-project true",
	"postStartCommand": "poetry install --no-interaction --no-ansi && sudo service redis-server restart && sudo service mysql restart && sudo service grafana-server restart",
	"remoteEnv": {
		"LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"		
	},
	"settings": { 
		"terminal.integrated.shell.linux": "/bin/bash",
		"python.pythonPath": ".venv/bin/python",
		"python.terminal.activateEnvironment": false
	},
	"extensions": [
		"ms-azuretools.vscode-docker",
		"ms-python.python"
	],
	"forwardPorts": [4447, 3000],
	"remoteUser": "${localEnv:USER}"
}