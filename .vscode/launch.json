{
	"version": "0.2.0",
	"configurations": [
		{
			"name":"opsiconfd default",
			"type":"python",
			"request":"launch",
			"module":"opsiconfd", 
			"args": ["--workers=1","--log-level-stderr=5", "--static-dir=${workspaceFolder}/opsiconfd_data/static"],
			"sudo": true
		},
		{
			"name":"opsiconfd",
			"type":"python",
			"request":"launch",
			"module":"opsiconfd", 
			"args": ["--workers=${input:worker}","--log-level-stderr=${input:loglevel}", "--static-dir=${workspaceFolder}/opsiconfd_data/static"],
			"sudo": true
		},
		{
			"name":"opsiconfd setup",
			"type":"python",
			"request":"launch",
			"module":"opsiconfd", 
			"args": ["setup", "--workers=${input:worker}","--log-level-stderr=${input:loglevel}", "--static-dir=${workspaceFolder}/opsiconfd_data/static"],
			"sudo": true
		}	
	],
	"inputs": [
		{
		"id": "loglevel",
		"type": "promptString",
		"description": "Set LogLevel Stderr.",
		"default": "5"
		},
		{
			"id": "worker",
			"type": "promptString",
			"description": "Number of opsiconfd worker to start",
			"default": "1"
		}
	  ]
}