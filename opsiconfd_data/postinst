getent group opsiconfd >/dev/null || groupadd --system opsiconfd
getent group shadow > /dev/null || groupadd --system shadow

getent passwd opsiconfd >/dev/null || useradd --system -g opsiconfd -d /var/lib/opsi -s /bin/bash opsiconfd

usermod -a -G shadow opsiconfd >/dev/null 2>&1 || true
usermod -a -G opsiadmin opsiconfd >/dev/null 2>&1 || true

chgrp shadow /etc/shadow
chmod g+r /etc/shadow
