/var/log/opsi/package.log {
    weekly
    missingok
    rotate 2
    compress
    notifempty
    size 10M
    create 640 opsiconfd opsiadmin
    su opsiconfd opsiadmin
}

/var/log/opsi/opsiconfd/[[:digit:]]*.log {
    weekly
    missingok
    rotate 1
    extension old
    compress
    notifempty
    size 2M
    create 640 opsiconfd opsiadmin
    su opsiconfd opsiadmin
}

